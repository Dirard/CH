<!DOCTYPE html>
<html>
  <head>
    <title>ClanWeb</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

     </head>

  <body class="">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <header>
      <nav class="navbar fixed-top navbar-expand-lg navbar-dark scrolling-navbar">
        <div class="container-fluid">
          <% if signed_in? %>
            <a class="navbar-brand waves-effect waves-light"><strong class="blue-text col"><%= image_tag("logo.png", :class => "logo") %></strong></a><h1>Dark Arena Clan</h1>
          

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon fa-lg"></span></button>
            <div class="collapse navbar-collapse" id="navbarContent">
              
              <ul class="navbar-nav mr-auto ml-4">
                <li class="nav-item active">
                  <a  class="nav-link waves-effect waves-light">Главная</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link waves-effect waves-light">Новости клана</a>
                  </li>
                <li class="nav-item">
                  <a class="nav-link waves-effect waves-light">О нас</a>
                </li>
                <li class="nav-item">
                  <a target="_blank" href="https://web.telegram.org/#/im?p=@DarkArenaChat" class="nav-link mt-1">
                    <i class="fa fa-lg fa-telegram fa-blue" style="color: rgba(69, 105, 223, 0.699)"></i>
                  </a> 
                </li>
              </ul>
              <div class="d-flex flex-row-reverse align-items-center">
                <%= button_to 'Выйти', sign_out_path, method: :delete, :class=>"btn btn-info btn-rounded btn-lg waves-effect waves-light" %>
                <a class="mr-4"><%= current_user.email %></a> 
              </div>
              
              
              
            </div>
          <% else %>
            <a class="navbar-brand waves-effect"><strong class="blue-text"><%= image_tag("logo.png", :class => "logo") %></strong></a>
            
          <% end %>
        </div>
      </nav>
    </header>

    

    <section class="h-100 d-flex justify-content-center">
      <div id="flash">
        <% flash.each do |key, value| %>
          <div class="flash <%= key %>"><%= value %></div>
        <% end %>
      </div>

      <%= yield %>

    </section>
  </body>
</html>
